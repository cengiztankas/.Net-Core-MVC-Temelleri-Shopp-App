@model Product
@{
    Layout="_Layout";
}
<form  method="Post">

    <div class="form-group mb-3">
        <input type="hidden" name="@Model.ProductId" value="@Model.ProductId">
        <label for="Name" >Name</label>
        <input asp-for="Name" value="@Model.Name" class="form-control">
    </div>
    <div class="form-group mb-3">
        <label for="Price" >Price</label>
        <input asp-for="Price" value="@Model.Price" class="form-control">
    </div>
    <div class="form-group mb-3">
        <label for="Description">Description</label>
        <textarea asp-for="Description" value="@Model.Description"  rows="5" class="form-control"></textarea>
    </div>
    <div class="form-group mb-3">
        <label for="ImageUrl">ImageUrl</label>
        <input asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control">
    </div>
    <div class="form-group mb-3">
        <label for="CategoryId">CategoryId</label>
        <select asp-for="CategoryId" asp-items="@ViewBag.Categories"  class="form-control"> 
            <option selected disabled >seciniz...</option>
        </select>
    </div>
    <div class="form-group mb-3">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>