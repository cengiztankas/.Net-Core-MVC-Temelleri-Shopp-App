@model ProductViewModel
@{
  Layout="_Layout";
}
@if (Model.Products.Count==0)
  {
    @await Html.PartialAsync("_noProduct");
  }
  else{
    <div class="row">
      @foreach (var Product in Model.Products)
      {
        <div class="col-4 mb-4">
          @await Html.PartialAsync("_product",Product)
        </div>
      } 
    </div>
  } 